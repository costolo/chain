<% if user_signed_in? %>
  <h1><%= current_user.name %></h1>

  <p><%= link_to "Sign out", destroy_user_session_path, method: :delete %></p>

  <div class="skills">
    <% current_user.skills.each do |skill| %>
      <div class="hover-tile-outer">
        <div class="hover-tile-container">
          <div class="hover-tile hover-tile-visible"></div>
          <div class="hover-tile hover-tile-hidden">
            <h4><%= skill.title %></h4>
            <%= "Current streak: " + skill.current_streak.to_s %>
            <br />
            <% if skill.time_remaining? %>
              Time remaining: 
              <%= content_tag(:span, :"data-countdown" => skill.expiration_date) {} %>
              <br />
            <% else %>
              <%= skill.end_current_streak %>
            <% end %>
            <%= link_to('Refresh', refresh_path(skill)) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= form_for @new_skill do |f| %>
    <%= f.text_field :title %>
    <%= f.submit "add" %>
  <% end %>
<% else %>
  <%= link_to "Sign in or sign up", new_user_session_path %>
<% end %>

<script>
  addSkill();
  countdown();
</script>